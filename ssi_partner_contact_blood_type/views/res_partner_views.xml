<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner form blood</field>
        <field name="model">res.partner</field>
        <field
            name="inherit_id"
            ref="ssi_partner_personal_information_page.res_partner_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']" position="inside">
                <group
                    name="personal_information_1"
                    string="Blood Type"
                    colspan="4"
                    col="4"
                >
                    <field name="blood_type_aob" />
                    <field name="blood_type_rh" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
