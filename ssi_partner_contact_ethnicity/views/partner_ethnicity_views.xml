<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_ethnicity_view_tree" model="ir.ui.view" >
        <field name="name">partner.ethnicity Tree</field>
        <field name="model">partner.ethnicity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="partner_ethnicity_view_form">
        <field name="name">partner.ethnicity Form</field>
        <field name="model">partner.ethnicity</field>
        <field name="arch" type="xml">
            <form>
                <group name="header_1" colspan="4" col="2">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active"/>
                </group>
                <notebook colspan="4">
                    <page name="note" string="Note">
                        <field name="note" colspan="4" nolabel="1" placeholder="Add note here ..."/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="partner_ethnicity_action">
        <field name="name">Ethnicity</field>
        <field name="res_model">partner.ethnicity</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="partner_ethnicity_menu"
        name="Ethnicities"
        parent="contacts.res_partner_menu_config"
        action="partner_ethnicity_action"
        sequence="9"/>

</odoo>
